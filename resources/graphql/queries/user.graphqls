
@use(class: "App\\GraphQL\\Out\\UserPresenter")
@use(class: "App\\GraphQL\\Controllers\\UserController")

extend type Query {
    user: UsersQuery!
}

type UsersQuery {
    current: User
        @route(action: "UserController@current")

    get(id: ID!): User
        @can(ability: "read")
}

type User
    @out(action: "UserPresenter@toArray")
{
    id: ID!
    login: String!
    email: String
    avatar: String!
    updatedAt: Carbon!
    createdAt: Carbon!
    abilities: [String!]!
}
